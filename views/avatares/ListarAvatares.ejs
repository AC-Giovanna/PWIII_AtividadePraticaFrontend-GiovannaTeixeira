<%- include('../partials/header.ejs') %>

<body>

    <div class="container">
    
        <%- include('../partials/menu') %>

    <div class = "card">
        <div class = "card-header">Todos os Avatares</div>
    </div>

    <% avatares.data.forEach(avatar=>{ %>

        <div class = "card mt-2 p-1">
            
            <div class = "card-body">
                <%= avatar.nome_avatar %>
            </div>
            <div class = "card-body">
                <%= avatar.descricao_avatar %>
            </div>

            <div class="btn-group mr-2">
                <a href="/EditarAvatares/<%= avatar.id_avatar %>" class="btn btn-success btn-sm mr-2 ml-2">Editar</a>
                <a href="#" class="btn btn-danger btn-sm mr-2 ml-2">Excluir</a>
            </div>

        </div>

    <% }); %>
    
    </div>

</body>

